{
  "compilerOptions": {
    "target": "esnext", // Menggunakan target ESNext untuk performa lebih baik
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",  // Menambahkan baseUrl agar alias bekerja dengan benar
    "paths": {
      "@/*": ["./src/*"],        // Alias ke folder src (lebih umum)
      "@/components/*": ["./src/components/*"]
    },
    "forceConsistentCasingInFileNames": true // Mencegah error case-sensitive
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
